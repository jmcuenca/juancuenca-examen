<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JuanCuencaexamen.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />

                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Text="Usuario" />
                <Entry x:Name="txtUsuario"  IsEnabled="False" Grid.Row="0" Grid.Column="1" Text="{Binding dt.usuario}" />

                <Label Grid.Row="1" Grid.Column="0" Text="Nombre" />
                <Entry x:Name="txtNombre"  IsEnabled="False" Grid.Row="1" Grid.Column="1" Text="{Binding dt.nombre}" />

                <Label Grid.Row="2" Grid.Column="0" Text="Total" />
                <Entry x:Name="txtTotal" IsEnabled="False"  Grid.Row="2" Grid.Column="1" Text="{Binding dt.total}" />
            
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>